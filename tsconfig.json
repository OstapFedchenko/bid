{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["src", "@types"],
  "exclude": [
    "**/__tests__/**",
    "**/*.stories.{ts,tsx}",
    "**/*.test.{ts,tsx}",
    "**/?*spec.*",
    "**/*.js"
  ]
}
